# services/api/routers/system.py
from __future__ import annotations
import os
from fastapi import APIRouter
from fastapi.responses import JSONResponse
from services.api.adapters.llm_adapters import LLM_CATALOG

router = APIRouter()

@router.get("/v1/system/agents")
def list_agents():
    return JSONResponse({"agents": ["credit_appraisal"]})

@router.get("/v1/system/llms")
def list_llms():
    return JSONResponse({"llms": LLM_CATALOG})

@router.get("/v1/system/samples")
def list_samples():
    # sample datasets deliberately empty (no sample usage)
    return JSONResponse({"samples": []})

@router.get("/v1/system/paths")
def system_paths():
    root = os.path.expanduser("~/demo-library")
    runs = os.path.join(root, "services", "api", ".runs")
    return JSONResponse({"root": root, "runs": runs})
